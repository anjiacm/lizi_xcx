/*搜索界面功能*/
.searchpage{
  width: 750rpx;
  height: 100%;
  --min-height: 1220rpx;
  overflow: hidden;
  position: fixed;
  z-index: 999;
  background-color: #ffffff;
  --border: 1rpx solid #000;
  font-family:'Microsoft YaHei UI','Microsoft Yahei','Microsoft Jhenghei','icomoon',helvetica,tahoma,arial,sans-serif; 
}
.searchpage .search{
  width: 750rpx;
  height: 100rpx;
  --border-bottom: 1rpx solid #aab1b3;
  display: -webkit-flex;
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  align-items: center;
  
}
.searchpage .goback{
  width: 125rpx;
  height: 70rpx;
  display: -webkit-flex;
  display: flex;
  flex-flow: row;
  
  justify-content: center;
  align-items: center;
}
.searchpage .goback::after{
  content: '\e94d';
  color: #8a9599;
  font-size: 50rpx;

}
.searchpage .search .searchinput{
  width: 500rpx;
  height: 80rpx;
  border: 1rpx solid rgba(170, 177 , 179, 0.1);
  border-radius: 10rpx;
  --background-color:rgba(242, 249, 246, 0.2);
  font-size: 26rpx;
  text-indent: 20rpx;
  color:#8a9599;
  text-align: left;
  display: -webkit-flex;
  display: flex;
  flex-flow: row;
  justify-content:flex-start;
  align-items: center;
}
.searchpage .searchdo{
  width: 750rpx;
  height: 200rpx;
  margin-top: 10rpx;
  --border: 1rpx solid #000;
  display: -webkit-flex;
  display: flex;
  flex-flow: row;
  justify-content:center;

}
.searchdo .oneres{
  width: 700rpx;
  height: 40rpx;
  text-align: left;
  text-indent: 20rpx;
  font-size: 20rpx;
  color: #aab1b3;
  line-height: 40rpx;
}
.oneres .resall{
  width: 680rpx;
  height: 150rpx;
  display: -webkit-flex;
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  --align-items: center;
  border-top: 1rpx solid #aab1b3;
  --border: 1rpx solid #000;
  margin-top: 15rpx;
  flex-wrap: wrap;
}
 .resall .textlist{
  margin-left: 15rpx;
  margin-top: 10rpx;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  background: rgba(170, 177 , 179, 0.1);
  color: #8a9599;
  text-align: center;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  padding-right: 20rpx;
 }
  
/*搜索界面结束*/