/*产品列表*/
.indexpage .all_list{
  width:100%;
  padding-bottom:110rpx; 
}
.all_list .onelist{
  width: 100%;
  height: 300rpx;
  border-bottom: 1rpx solid rgba(170, 177 , 179, 0.1);
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom:30rpx; 
  padding-top: 40rpx;
}
.onelist .list_img{
  width: 280rpx;
  height: 300rpx;
  --border: 1rpx solid #000;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.list_img .img_btn{
  width: 228rpx;
  height: 280rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 5rpx 3rpx rgba(62, 68, 65, 0.5);
}
.onelist .list_text{
  width: 470rpx;
  height: 300rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family:'Microsoft YaHei UI','Microsoft Yahei','Microsoft Jhenghei','icomoon',helvetica,tahoma,arial,sans-serif; 
}
.list_text .title{
  width: 450rpx;
  height: 100rpx;
  margin-top: 12.5rpx;
  text-align: left;
  color: #3e4441;
  --border: 1rpx solid #000;
  overflow:hidden;
  font-size: 28rpx; 
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  letter-spacing: 4rpx;
  -webkit-box-orient: vertical;
}
.list_text .content{
  width: 450rpx;
  height: 120rpx;
  text-align: left;
  color: #8a9599;
  font-size: 22rpx;
  --border: 1rpx solid #000;
  overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  letter-spacing: 2rpx;
  -webkit-box-orient: vertical;
  padding-top: 20rpx;
}
.list_text .go_btn{
  width: 350rpx;
  height: 60rpx;
  background: #f45864;
  border-radius: 60rpx;
  text-align: center;
  font-size: 28rpx;
  letter-spacing: 8rpx;
  color: #fff;
  line-height: 60rpx;
  margin-top: 50rpx;
}
.list_text .go_btn::after{
  content: '\e949';
  font-size: 24rpx;
}
/*产品列表结束*/
