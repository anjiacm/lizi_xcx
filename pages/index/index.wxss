@import "../../common/font/font.wxss";
@import "../../module/search/search.wxss";
.pageindex {
  width: 750rpx;
  height: 100%;
  min-height: 1440rpx;
  overflow-x: hidden;

  --border:2rpx solid #000;
}
/*头部内容*/
.headpage{
  width: 750rpx;
  height: 198rpx;
  box-shadow: 0rpx 5rpx 3rpx rgba(62, 68, 65, 0.5);
  position: fixed;
  background: #fff;
  z-index: 10;
}
.headpage .search{
  width: 750rpx;
  height: 100rpx;
  --border: 1rpx solid #000;
  display: -webkit-flex;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  font-family:'Microsoft YaHei UI','Microsoft Yahei','Microsoft Jhenghei','icomoon',helvetica,tahoma,arial,sans-serif; 
}
.headpage .search .searchinput{
  width: 500rpx;
  height: 70rpx;
  border: 1rpx solid rgba(170, 177 , 179, 0.8);
  border-radius: 20rpx;
  background-color:rgba(242, 249, 246, 0.2);
  font-size: 32rpx;
  text-indent: 20rpx;
  color:#8a9599;
  --text-align: center;
  display: -webkit-flex;
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  align-items: center;
}
.searchinputicon::before{
  content: '\e93a';
}
/*栏目滚动区域*/
.headpage .scroll_list{
  width: 750rpx;
  height: 100rpx;
  --border: 1rpx solid #000;
}
.scroll_list .scroll_lm{
  width: 750rpx;
  height: 100rpx;
  overflow: hidden;
  display: flex;
  display:-webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  white-space: nowrap;
  flex-wrap: nowrap;
  
}
.scroll_lm .view_res{
 
  height: 94rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  line-height: 100rpx;
  display: inline-block;
  padding-left: 10rpx;
  padding-right: 10rpx;
  
}
 
/*栏目滚动区域结束*/

/*特惠产品展示*/
.indexpage{
 width: 750rpx;
 
 margin-top: 210rpx;
 
}
.indexpage .cuxiao{
  width: 750rpx;
  height: 370rpx;
  --border: 1rpx solid #000;
}
.cuxiao .scroll_cu_list{
  width: 750rpx;
  height: 370rpx;
  overflow: hidden;
  display: flex;
  display:-webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  white-space: nowrap;
  flex-wrap: nowrap;
}
.scroll_cu_list .view_list{
  width: 180rpx;
  height:320rpx;
  --border: 1rpx solid #000;
 
  margin-left:7.5rpx;
  margin-right:7.5rpx;
  display: inline-block;
  font-size: 26rpx;
  text-align: center;
  padding: 10rpx;
}
.view_list .img_view{
  width: 220rpx;
  height: 320rpx;
  border-radius: 15rpx;
   
}